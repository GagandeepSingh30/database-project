<div class="row mb-4">
  <div class="col-12">
    <div class="card shadow-sm bg-warning text-dark fade-in">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="me-3">
            <i class="fas fa-user-tie fa-3x"></i>
          </div>
          <div>
            <h2 class="card-title mb-0">Welcome, <%= user.firstName %> <%= user.lastName %></h2>
            <p class="lead mb-0">Manager Dashboard</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-3 mb-4 mb-md-0">
    <div class="card shadow-sm h-100 border-primary dashboard-card">
      <div class="card-body text-center">
        <h1 class="display-4 text-primary mb-0 dashboard-stat"><%= data.openTicketsCount %></h1>
        <p class="text-muted">Open Tickets</p>
        <div class="d-grid">
          <a href="/tickets?status=open" class="btn btn-outline-primary">View Open Tickets</a>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-3 mb-4 mb-md-0">
    <div class="card shadow-sm h-100 border-success dashboard-card">
      <div class="card-body text-center">
        <h1 class="display-4 text-success mb-0 dashboard-stat">
          <% 
            let helpdesks = 0;
            if (data.usersByRole) {
              const helpdeskData = data.usersByRole.find(u => u.role === 'helpdesk');
              if (helpdeskData) helpdesks = helpdeskData.count;
            }
          %>
          <%= helpdesks %>
        </h1>
        <p class="text-muted">Helpdesk Operators</p>
        <div class="d-grid">
          <a href="/users?role=helpdesk" class="btn btn-outline-success">View Operators</a>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-3 mb-4 mb-md-0">
    <div class="card shadow-sm h-100 border-info dashboard-card">
      <div class="card-body text-center">
        <h1 class="display-4 text-info mb-0 dashboard-stat">
          <% 
            let technicians = 0;
            if (data.usersByRole) {
              const techData = data.usersByRole.find(u => u.role === 'technician');
              if (techData) technicians = techData.count;
            }
          %>
          <%= technicians %>
        </h1>
        <p class="text-muted">IT Technicians</p>
        <div class="d-grid">
          <a href="/users?role=technician" class="btn btn-outline-info">View Technicians</a>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-3">
    <div class="card shadow-sm h-100 border-warning dashboard-card">
      <div class="card-body text-center">
        <h1 class="display-4 text-warning mb-0 dashboard-stat">
          <% 
            let managers = 0;
            if (data.usersByRole) {
              const managerData = data.usersByRole.find(u => u.role === 'manager');
              if (managerData) managers = managerData.count;
            }
          %>
          <%= managers %>
        </h1>
        <p class="text-muted">Managers</p>
        <div class="d-grid">
          <a href="/users?role=manager" class="btn btn-outline-warning">View Managers</a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8 mb-4">
    <div class="card shadow-sm h-100 dashboard-card">
      <div class="card-header bg-warning text-dark">
        <h5 class="mb-0"><i class="fas fa-clipboard-list me-2"></i>Recent Tickets</h5>
      </div>
      <div class="card-body p-0">
        <% if (data.recentTickets && data.recentTickets.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th>ID</th>
                  <th>Title</th>
                  <th>Status</th>
                  <th>Priority</th>
                  <th>Created By</th>
                  <th>Assigned To</th>
                  <th>Date</th>
                </tr>
              </thead>
              <tbody>
                <% data.recentTickets.forEach(ticket => { %>
                  <tr>
                    <td><a href="/tickets/<%= ticket.id %>">#<%= ticket.id %></a></td>
                    <td><%= ticket.title %></td>
                    <td>
                      <% if (ticket.status === 'Open') { %>
                        <span class="badge bg-primary"><%= ticket.status %></span>
                      <% } else if (ticket.status === 'Pending') { %>
                        <span class="badge bg-warning text-dark"><%= ticket.status %></span>
                      <% } else if (ticket.status === 'In Progress') { %>
                        <span class="badge bg-info"><%= ticket.status %></span>
                      <% } else if (ticket.status === 'Resolved') { %>
                        <span class="badge bg-success"><%= ticket.status %></span>
                      <% } else if (ticket.status === 'Closed') { %>
                        <span class="badge bg-secondary"><%= ticket.status %></span>
                      <% } %>
                    </td>
                    <td>
                      <% if (ticket.priority === 'High') { %>
                        <span class="badge bg-danger"><%= ticket.priority %></span>
                      <% } else if (ticket.priority === 'Medium') { %>
                        <span class="badge bg-warning text-dark"><%= ticket.priority %></span>
                      <% } else { %>
                        <span class="badge bg-success"><%= ticket.priority %></span>
                      <% } %>
                    </td>
                    <td><%= ticket.creator ? ticket.creator.firstName + ' ' + ticket.creator.lastName : 'N/A' %></td>
                    <td><%= ticket.assignee ? ticket.assignee.firstName + ' ' + ticket.assignee.lastName : 'Unassigned' %></td>
                    <td><%= new Date(ticket.createdAt).toLocaleDateString() %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="text-center p-4">
            <p class="text-muted mb-0">No recent tickets found</p>
          </div>
        <% } %>
      </div>
      <div class="card-footer text-end">
        <a href="/tickets" class="btn btn-sm btn-outline-warning">View All Tickets</a>
      </div>
    </div>
  </div>
  
  <div class="col-md-4 mb-4">
    <div class="card shadow-sm h-100 dashboard-card">
      <div class="card-header bg-warning text-dark">
        <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Ticket Status</h5>
      </div>
      <div class="card-body">
        <% if (data.ticketsByStatus && data.ticketsByStatus.length > 0) { %>
          <div class="list-group">
            <% 
              const statusOrder = ['Open', 'In Progress', 'Pending', 'Resolved', 'Closed'];
              const statusColors = {
                'Open': 'primary',
                'In Progress': 'info',
                'Pending': 'warning',
                'Resolved': 'success',
                'Closed': 'secondary'
              };
              const statusIcons = {
                'Open': 'exclamation-circle',
                'In Progress': 'spinner',
                'Pending': 'clock',
                'Resolved': 'check-circle',
                'Closed': 'times-circle'
              };
              
              // Sort by predefined order
              const sortedStatuses = [...data.ticketsByStatus].sort((a, b) => {
                return statusOrder.indexOf(a.status) - statusOrder.indexOf(b.status);
              });
              
              sortedStatuses.forEach(status => {
                const color = statusColors[status.status] || 'primary';
                const icon = statusIcons[status.status] || 'circle';
            %>
              <a href="/tickets?status=<%= status.status.toLowerCase() %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                <div>
                  <i class="fas fa-<%= icon %> text-<%= color %> me-2"></i><%= status.status %>
                </div>
                <span class="badge bg-<%= color %> <%= status.status === 'Pending' ? 'text-dark' : '' %> rounded-pill">
                  <%= status.count %>
                </span>
              </a>
            <% }); %>
          </div>
        <% } else { %>
          <div class="text-center p-4">
            <p class="text-muted mb-0">No ticket status data available</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <div class="col-md-4 mb-4">
    <div class="card shadow-sm h-100 dashboard-card">
      <div class="card-header bg-warning text-dark">
        <h5 class="mb-0"><i class="fas fa-user-cog me-2"></i>Admin Actions</h5>
      </div>
      <div class="card-body">
        <div class="list-group">
          <a href="/auth/admin/register" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <div>
              <i class="fas fa-user-plus me-2"></i>Register New User
            </div>
            <i class="fas fa-chevron-right"></i>
          </a>
          <a href="/users" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <div>
              <i class="fas fa-users me-2"></i>Manage Users
            </div>
            <i class="fas fa-chevron-right"></i>
          </a>
          <a href="/offices" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <div>
              <i class="fas fa-building me-2"></i>Manage Offices
            </div>
            <i class="fas fa-chevron-right"></i>
          </a>
          <a href="/equipment/create" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <div>
              <i class="fas fa-plus-circle me-2"></i>Add Equipment
            </div>
            <i class="fas fa-chevron-right"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-8 mb-4">
    <div class="card shadow-sm h-100 dashboard-card">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-tachometer-alt me-2"></i>Quick Stats</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-4 mb-3 mb-md-0">
            <div class="card bg-light">
              <div class="card-body text-center">
                <h2 class="text-primary mb-0 dashboard-stat">
                  <% 
                    let totalUsers = 0;
                    if (data.usersByRole) {
                      data.usersByRole.forEach(role => {
                        totalUsers += parseInt(role.count);
                      });
                    }
                  %>
                  <%= totalUsers %>
                </h2>
                <p class="text-muted mb-0">Total Users</p>
              </div>
            </div>
          </div>
          
          <div class="col-md-4 mb-3 mb-md-0">
            <div class="card bg-light">
              <div class="card-body text-center">
                <h2 class="text-success mb-0 dashboard-stat">
                  <% 
                    let resolvedTickets = 0;
                    if (data.ticketsByStatus) {
                      const resolvedData = data.ticketsByStatus.find(t => t.status === 'Resolved');
                      if (resolvedData) resolvedTickets = resolvedData.count;
                    }
                  %>
                  <%= resolvedTickets %>
                </h2>
                <p class="text-muted mb-0">Resolved Tickets</p>
              </div>
            </div>
          </div>
          
          <div class="col-md-4">
            <div class="card bg-light">
              <div class="card-body text-center">
                <h2 class="text-danger mb-0 dashboard-stat">
                  <% 
                    let pendingTickets = 0;
                    if (data.ticketsByStatus) {
                      const pendingData = data.ticketsByStatus.find(t => t.status === 'Pending');
                      if (pendingData) pendingTickets = pendingData.count;
                    }
                  %>
                  <%= pendingTickets %>
                </h2>
                <p class="text-muted mb-0">Pending Tickets</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 