<div class="row mb-4">
  <div class="col-12">
    <div class="card shadow-sm fade-in">
      <div class="card-body">
        <h2 class="card-title">Welcome, <%= user.firstName %> <%= user.lastName %></h2>
        <p class="lead">This is your helpdesk dashboard. You can manage tickets and access system features from here.</p>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 mb-4">
    <div class="card shadow-sm h-100 dashboard-card">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-ticket-alt me-2"></i>Ticket Summary</h5>
      </div>
      <div class="card-body">
        <div class="d-flex justify-content-center align-items-center mb-4">
          <div class="text-center">
            <h1 class="display-4 mb-0 dashboard-stat"><%= data.openTicketsCount %></h1>
            <p class="text-muted">Open Tickets</p>
          </div>
        </div>
        <div class="d-grid">
          <a href="/tickets" class="btn btn-outline-primary">View All Tickets</a>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-6 mb-4">
    <div class="card shadow-sm h-100 dashboard-card">
      <div class="card-header bg-info text-white">
        <h5 class="mb-0"><i class="fas fa-user-cog me-2"></i>Quick Actions</h5>
      </div>
      <div class="card-body">
        <div class="list-group">
          <a href="/tickets" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <div>
              <i class="fas fa-list-ul me-2"></i>View Tickets
            </div>
            <i class="fas fa-chevron-right"></i>
          </a>
          <% if (user.role === 'helpdesk' || user.role === 'manager') { %>
            <a href="/tickets/create" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
              <div>
                <i class="fas fa-plus-circle me-2"></i>Create Ticket
              </div>
              <i class="fas fa-chevron-right"></i>
            </a>
          <% } %>
          <% if (user.role === 'technician' || user.role === 'manager') { %>
            <a href="/equipment" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
              <div>
                <i class="fas fa-desktop me-2"></i>View Equipment
              </div>
              <i class="fas fa-chevron-right"></i>
            </a>
          <% } %>
          <a href="/auth/profile" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <div>
              <i class="fas fa-user me-2"></i>My Profile
            </div>
            <i class="fas fa-chevron-right"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</div> 